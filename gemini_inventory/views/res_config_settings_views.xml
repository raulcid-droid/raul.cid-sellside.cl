<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.gemini</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="Gemini Inventory Agent" name="gemini_inventory">
                        <block title="Gemini API Configuration">
                            <setting help="Configure your Google Gemini API Key">
                                <field name="gemini_api_key" password="True" placeholder="Enter your Gemini API Key"/>
                                <div class="text-muted">
                                    Get your free API key at: https://aistudio.google.com/api-keys
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
